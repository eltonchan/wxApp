/**app.wxss**/
.container {
  height: 100%;
  overflow:hidden;
  box-sizing: border-box;
}

.ui-flex{
    position: relative;
    display: flex;
    width: 100%;
    box-sizing: border-box;
}

/*垂直居中*/
.ui-flex-align{
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
}
/*两端对齐*/
.ui-flex-justify{
    position: relative;
    width: 100%;
    display: flex;
    justify-content: justify;
    box-sizing: border-box;
}
/*水平居中*/
.ui-flex-pack{
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    box-sizing: border-box;
}
/*水平垂直居中*/
.ui-flex-center{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
}
/*垂直居中，水平两端对齐*/
.ui-flex-justify-center{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
}

.ui-flex-1{
    flex: 1;
}
.ui-flex-left{
    text-align: left;
}
.ui-flex-right{
    text-align: right;
}

.ui-top-line{
    position: relative;
}
.ui-top-line:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 1px;
    border-top: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleY(0.5);
}

.ui-bottom-line{
    position: relative;
}
.ui-bottom-line:before {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    border-bottom: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleY(0.5);
}
.ui-left-line{
    position: relative;
}
.ui-left-line:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 1px;
    height: 100%;
    border-left: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleX(0.5);
}
.ui-right-line{
    position: relative;
}
.ui-right-line:before {
    content: " ";
    position: absolute;
    right: 0;
    top: 0;
    width: 1px;
    height: 100%;
    border-right: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleX(0.5);
}
.ui-two-line{
    position: relative;
}
.ui-two-line:before{
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 1px;
    border-top: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleY(0.5);
}
.ui-two-line:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    border-bottom: 1px solid #D9D9D9;
    color: #D9D9D9;
    transform: scaleY(0.5);
}


.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    font-size: 0;
    clear: both;
    visibility: visible;
}















